pkgname=buildbox-common
pkgver=1.3.27
pkgrel=1
pkgdesc="Shared protocol-buffer definitions and various helper functions"
arch=(x86_64)
url="https://buildgrid.build"
license=('Apache')
depends=('bubblewrap' 'curl' 'fuse3' 'google-glog' 'grpc' 'openssl' 'protobuf' 'tomlplusplus' 'util-linux')
makedepends=('cmake' 'git' 'ninja' 'tomlplusplus' 'nlohmann-json')
source=("git+https://gitlab.com/BuildGrid/buildbox/buildbox-common#tag=${pkgver}&commit=53ddc56421210818b88c577629593fa147404d7b")
sha256sums=('SKIP')

build() {
  mkdir -p build && cd build
  cmake ../buildbox-common \
    -G Ninja \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF \
    -DTOOLS=OFF \
    -DCASD=ON \
    -DCASD_BUILD_BENCHMARK=OFF \
    -DFUSE=ON \
    -DRECC=ON \
    -DRUN_BUBBLEWRAP=ON \
    -DWORKER=ON
  ninja
}

package() {
  cd build
  DESTDIR="$pkgdir/" ninja install
}

pkgname=buildstream-plugins-experimental
pkgver=2.1.0
pkgrel=1
pkgdesc="A collection of experimental BuildStream plugins."
arch=(any)
url="https://buildstream.build"
license=('LGPL')
depends=(
    buildstream
    bazel
    git
    ostree
    python-arpy
    python-requests
    python-tomlkit
    quilt
)
makedepends=(cython git python-packaging python-setuptools)
source=("git+https://gitlab.com/BuildStream/buildstream-plugins-community#tag=${pkgver}&commit=637e2d95e656b9d46575da5737b65fd0cc25dce2")
sha256sums=('SKIP')

build() {
  cd buildstream-plugins-community
  python setup.py build
}

package() {
  cd buildstream-plugins-community
  python setup.py install --root="$pkgdir/" --skip-build
}
